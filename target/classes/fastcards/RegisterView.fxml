<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="fastcards.RegisterController">
  <center>
    <VBox spacing="12" alignment="CENTER">
      <Label text="Create Account" styleClass="title"/>
      <TextField fx:id="usernameField" promptText="Username" maxWidth="260"/>
      <TextField fx:id="emailField" promptText="Email" maxWidth="260"/>
      <PasswordField fx:id="passwordField" promptText="Password" maxWidth="260"/>
      <PasswordField fx:id="confirmField" promptText="Confirm Password" maxWidth="260"/>
      <HBox spacing="8" alignment="CENTER">
        <Button text="Create" onAction="#onCreate" styleClass="btn-primary"/>
        <Button text="Back" onAction="#onBack"/>
      </HBox>
    </VBox>
  </center>
  <padding><Insets topRightBottomLeft="24"/></padding>
</BorderPane>

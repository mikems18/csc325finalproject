<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="fastcards.FlashcardController">
  <top>
    <HBox alignment="CENTER">
      <Label fx:id="titleLabel" text="Deck" styleClass="title"/>
    </HBox>
  </top>
  <center>
    <VBox spacing="10" alignment="CENTER">
      <TextArea fx:id="contentArea" wrapText="true" prefWidth="320" prefHeight="520" editable="false"/>
    </VBox>
  </center>
  <bottom>
    <HBox alignment="CENTER" spacing="8">
      <Button text="Show Q/A" onAction="#onToggle"/>
      <Button text="Prev" onAction="#onPrev"/>
      <Button text="Next" onAction="#onNext"/>
      <Button text="Finish" onAction="#onFinish" styleClass="btn-primary"/>
    </HBox>
  </bottom>
</BorderPane>

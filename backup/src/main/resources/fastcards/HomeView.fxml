<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fastcards.HomeController">
  <top>
    <HBox alignment="CENTER_LEFT" spacing="10">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
      </padding>
      <Label fx:id="welcomeLabel" text="Welcome"/>
    </HBox>
  </top>
  <center>
    <VBox spacing="10">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
      </padding>
      <Label text="Your Decks:"/>
      <ListView fx:id="decksList" prefHeight="300.0"/>
    </VBox>
  </center>
  <bottom>
    <HBox alignment="CENTER" spacing="10">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
      </padding>
      <Button text="Add Deck" onAction="#onAddDeck"/>
      <Button text="Delete Deck" onAction="#onDeleteDeck"/>
      <Button text="Edit Deck" onAction="#onEditDeck"/>
      <Button text="Study (Flashcards)" onAction="#onStudyFlashcards"/>
      <Button text="Study (Multiple Choice)" onAction="#onStudyMultipleChoice"/>
      <Button text="Logout" onAction="#onLogout"/>
    </HBox>
  </bottom>
</BorderPane>

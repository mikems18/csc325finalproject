<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="fastcards.StudyMCController"
      alignment="CENTER" spacing="10" >
  <Label fx:id="deckTitleLabel" text="Deck Title" style="-fx-font-size: 20px;"/>
  <Label fx:id="questionLabel" text="Question" wrapText="true" style="-fx-font-size: 16px;"/>
  <VBox spacing="5">
    <RadioButton fx:id="optionA" text="Option A"/>
    <RadioButton fx:id="optionB" text="Option B"/>
    <RadioButton fx:id="optionC" text="Option C"/>
    <RadioButton fx:id="optionD" text="Option D"/>
  </VBox>
  <HBox spacing="10" alignment="CENTER">
    <Button text="Next" onAction="#onNext"/>
    <Button text="Back" onAction="#onBack"/>
  </HBox>
</VBox>

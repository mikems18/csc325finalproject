<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="900" prefWidth="1400"
            stylesheets="@app.css"
            fx:controller="fastcards.HomeController"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">

    <!-- TOP: Logo + Welcome -->
    <top>
        <VBox alignment="CENTER">
            <padding>
                <Insets top="20" bottom="10" left="20" right="20" />
            </padding>
            <children>
                <ImageView fitHeight="165" preserveRatio="true">
                    <image>
                        <Image url="@img/logo.png" />
                    </image>
                </ImageView>

                <Label fx:id="welcomeLabel"
                       style="-fx-font-size: 20px; -fx-text-fill: #1d5fbf; -fx-font-weight: bold;"
                       text="Welcome" />
            </children>
        </VBox>
    </top>

    <!-- CENTER: Frosted Glass Panel -->
    <center>
        <StackPane styleClass="frosted-container">
            <padding>
                <Insets top="30" bottom="30" left="30" right="30" />
            </padding>

            <HBox alignment="CENTER" spacing="40">
                <children>

                    <!-- LEFT: Deck list -->
                    <VBox spacing="15" HBox.hgrow="ALWAYS">
                        <children>

                            <!-- Your Decks image header -->
                            <ImageView fitHeight="60" preserveRatio="true">
                                <image>
                                    <Image url="@img/yourdecks.png" />
                                </image>
                            </ImageView>

                            <ListView fx:id="deckListView"
                                      prefHeight="500"
                                      prefWidth="900"
                                      styleClass="deck-list"
                                      style="-fx-background-insets: 0;
                                             -fx-control-inner-background: transparent;
                                             -fx-background-color: transparent;" />
                        </children>
                    </VBox>

                    <!-- RIGHT: Buttons -->
                    <VBox spacing="12">
                        <children>
                            <Button text="Study Flashcards"
                                    onAction="#onStudyFlash"
                                    styleClass="button-primary" />

                            <Button text="Study Multiple Choice"
                                    onAction="#onStudyMultipleChoice"
                                    styleClass="button-primary" />

                            <Separator />

                            <Button text="Add Deck"
                                    onAction="#onAddDeck"
                                    styleClass="button-primary" />

                            <Button text="Edit Cards"
                                    onAction="#onEditDeck"
                                    styleClass="button-primary" />

                            <Button text="Rename Deck"
                                    onAction="#onRenameDeck"
                                    styleClass="button-primary" />

                            <Button text="Duplicate Deck"
                                    onAction="#onDuplicateDeck"
                                    styleClass="button-primary" />

                            <Button text="Delete Deck"
                                    onAction="#onDeleteDeck"
                                    styleClass="button-primary" />

                            <Separator />

                            <Button text="Share Deck"
                                    onAction="#onShareDeck"
                                    styleClass="button-primary" />

                            <Button text="Import Shared Deck"
                                    onAction="#onImportShared"
                                    styleClass="button-primary" />

                            <Separator />

                            <Button text="Logout"
                                    onAction="#onLogout"
                                    styleClass="button-primary" />
                        </children>
                    </VBox>

                </children>
            </HBox>

        </StackPane>
    </center>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="900.0" prefWidth="1400.0"
            stylesheets="@app.css"
            fx:controller="fastcards.StudyMCController"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">

    <!-- TOP: Back + title + centered pill progress -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <children>
                <!-- back + title -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Button text="âŸµ Back"
                                onAction="#onBack"
                                styleClass="button-primary"/>
                        <Label text="Multiple Choice"
                               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    </children>
                </HBox>

                <!-- centered pill progress -->
                <HBox alignment="CENTER">
                    <children>
                        <StackPane fx:id="progressPill"
                                   styleClass="progress-pill">
                            <Region fx:id="progressFill"
                                    styleClass="progress-pill-fill"
                                    StackPane.alignment="CENTER_LEFT"/>
                            <Label fx:id="progressText"
                                   text="0 / 0"
                                   styleClass="progress-pill-text"/>
                        </StackPane>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- CENTER: Frosted content -->
    <center>
        <StackPane>
            <padding>
                <Insets top="20" right="40" bottom="40" left="40"/>
            </padding>
            <children>
                <VBox spacing="25"
                      alignment="TOP_CENTER"
                      styleClass="frosted-container">

                    <children>
                        <!-- Question -->
                        <Label fx:id="questionLabel"
                               wrapText="true"
                               text="Question goes here"
                               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1d5fbf;"
                               maxWidth="800"/>

                        <!-- Answer options (pill-style buttons) -->
                        <VBox spacing="12" maxWidth="800">
                            <children>
                                <Button fx:id="optionAButton"
                                        text="Option A"
                                        onAction="#onOptionA"
                                        maxWidth="Infinity"
                                        styleClass="button-primary mc-option"/>

                                <Button fx:id="optionBButton"
                                        text="Option B"
                                        onAction="#onOptionB"
                                        maxWidth="Infinity"
                                        styleClass="button-primary mc-option"/>

                                <Button fx:id="optionCButton"
                                        text="Option C"
                                        onAction="#onOptionC"
                                        maxWidth="Infinity"
                                        styleClass="button-primary mc-option"/>

                                <Button fx:id="optionDButton"
                                        text="Option D"
                                        onAction="#onOptionD"
                                        maxWidth="Infinity"
                                        styleClass="button-primary mc-option"/>
                            </children>
                        </VBox>

                        <!-- Feedback + progress text -->
                        <HBox alignment="CENTER" spacing="40">
                            <children>
                                <Label fx:id="feedbackLabel"
                                       text=""
                                       style="-fx-font-size: 16px; -fx-text-fill: white;"/>

                                <Label fx:id="progressLabel"
                                       text="0 / 0"
                                       style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>

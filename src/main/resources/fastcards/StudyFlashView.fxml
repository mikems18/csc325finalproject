<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="900.0" prefWidth="1400.0"
            stylesheets="@app.css"
            fx:controller="fastcards.StudyFlashController"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">

    <!-- TOP: Back button + centered pill progress -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" bottom="5" left="20" right="20"/>
            </padding>
            <children>
                <!-- Back button row -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Button text="âŸµ Back"
                                onAction="#onBack"
                                styleClass="button-primary"/>
                    </children>
                </HBox>

                <!-- Centered pill progress bar -->
                <HBox alignment="CENTER">
                    <children>
                        <StackPane fx:id="progressPill"
                                   styleClass="progress-pill">
                            <!-- blue fill, scaled in controller -->
                            <Region fx:id="progressFill"
                                    styleClass="progress-pill-fill"
                                    StackPane.alignment="CENTER_LEFT"/>
                            <!-- text "completed / total" -->
                            <Label fx:id="progressText"
                                   text="0 / 0"
                                   styleClass="progress-pill-text"/>
                        </StackPane>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- CENTER: card + Show Answer under it -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="40" bottom="20" left="60" right="60"/>
            </padding>

            <!-- Card container -->
            <StackPane fx:id="cardContainer"
                       styleClass="flash-card"
                       onMouseClicked="#onCardClicked">
                <!-- FRONT -->
                <VBox fx:id="frontSide" alignment="CENTER" spacing="10">
                    <Label fx:id="frontLabel"
                           text="Question"
                           wrapText="true"
                           textAlignment="CENTER"
                           styleClass="flash-card-front-text"/>
                </VBox>

                <!-- BACK -->
                <VBox fx:id="backSide" alignment="CENTER" spacing="10"
                      visible="false" opacity="0">
                    <Label fx:id="backLabel"
                           text="Answer"
                           wrapText="true"
                           textAlignment="CENTER"
                           styleClass="flash-card-back-text"/>
                </VBox>
            </StackPane>

            <!-- Show Answer centered under the card -->
            <Button fx:id="showAnswerButton"
                    text="Show Answer"
                    onAction="#onShowAnswer"
                    styleClass="button-primary"/>

            <Label text="Tip: click the card or press Show Answer to flip"
                   style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
        </VBox>
    </center>

    <!-- BOTTOM: Missed / Got It + stats -->
    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" bottom="20" left="20" right="20"/>
            </padding>

            <!-- Missed left, Got It right -->
            <HBox alignment="CENTER" spacing="16">
                <Button fx:id="missedButton"
                        text="Missed It"
                        onAction="#onMissed"
                        styleClass="button-primary"
                        maxWidth="Infinity"
                        HBox.hgrow="ALWAYS"/>

                <Button fx:id="gotItButton"
                        text="Got It"
                        onAction="#onGotIt"
                        styleClass="button-primary"
                        maxWidth="Infinity"
                        HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- progress and stats text -->
            <HBox alignment="CENTER" spacing="30">
                <Label fx:id="progressLabel"
                       style="-fx-text-fill: #333; -fx-font-size: 13px;"/>
                <Label fx:id="statsLabel"
                       style="-fx-text-fill: #333; -fx-font-size: 13px;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
